<div class="container p-4">
  <div class="row">
    <div class="col text-left">
      <h3>ショッピングカート</h3>
    </div>
    <div class="col text-right">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, class:"btn btn-sm btn-danger", method: :delete %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="font-weight-bold h5">商品名</th>
          <th class="font-weight-bold h5">単価(税込)</th>
          <th class="font-weight-bold h5">数量</th>
          <th class="font-weight-bold h5">小計</th>
          <th class="font-weight-bold h5"></th>
        </tr>
      </thead>
      <% if current_customer %>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= number_with_delimiter(cart_item.item.with_tax_price, delimiter: ',') %></td>
          <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item) do |f| %>
              <%= f.select :amount, options_for_select(*[1..100], cart_item.amount) %>
              <%= f.submit "変更", class:"btn btn-sm btn-success", method: :patch %>
            <% end %>
          </td>
          <td>
            <%= number_with_delimiter(cart_item.subtotal, delimiter: ',') %>
            <% @total_amount += cart_item.subtotal %>
          </td>
          <th class="text-center"><%= link_to "削除する",cart_item_path(cart_item.id), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %></th>
        </tr>
        <% end %>
      </tbody>
      <% end %>
    </table>
  </div>
  <div class="row">
    <div class="col text-left">
      <%= link_to "買い物を続ける", root_path, class:"btn btn-primary ml-3" %>
    </div>
    <div class="col-3 mx-auto text-right">
      <table class="table table-bordered">
        <tbody>
          <th>合計金額</th>
          <td><%= number_with_delimiter(@total_amount, delimiter: ',') %></td>
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center">
  <% if @cart_items.any? %>
    <%= link_to "情報入力に進む", new_order_path, class:"btn btn-success" %>
  </div>
  <% else %>
  <p>データがありません</p>
<% end %>
</div>