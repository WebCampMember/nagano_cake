<h1>ショッピングカート</h1>
<div><%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete %></div>
<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
    <tr>
      <th><%= cart_item.item.name %></th>
      <td><%= cart_item.item.with_tax_price %> 円</td>
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item) do |f| %>
          <%= f.select :amount, options_for_select(*[1..100], cart_item.amount) %>
          <%= f.submit "変更", method: :patch %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal%> 円</td>
      <% @total_amount += cart_item.subtotal %>
      <th></th>
    </tr>
    <% end %>
  </tbody>
</table>

<p>合計金額: <%= @total_amount %> 円</p>
<div><%= link_to "買い物を続ける", items_path %></div>
<div><%= link_to "情報入力に進む", new_order_path %></div>