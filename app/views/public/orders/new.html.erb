<div class="container">
  <div class="py-3">
    <h3 class="ml-4">注文情報入力</h3>
    <%= form_with model: @order, url: confirm_orders_path, method: :post do |f| %>
    <p class="font-weight-bold">支払方法</p>
    <div class="ml-4">
      <div>
        <%= f.radio_button :pay_method, Order.pay_methods.key(0) %>
        <%= f.label :pay_method_credit_card, Order.pay_methods_i18n[:credit_card] %>
      </div>
      <div>
        <%= f.radio_button :pay_method, Order.pay_methods.key(1) %>
        <%= f.label :pay_method_transfer, Order.pay_methods_i18n[:transfer] %>
      </div>
    </div>
    <p class="font-weight-bold">お届け先</p>
    <div class="ml-4">
      <div>
        <%= f.radio_button :select_address, "0" %>
        <%= f.label :select_address_0, "ご自身の住所" %>
      </div>
      <div class="ml-4">
        <p>〒<%= current_customer.postal_code %> <%= current_customer.address %><br>
        <%= current_customer.last_name %> <%= current_customer.first_name %></p>
      </div>
      <div>
        <%= f.radio_button :select_address, "1" %>
        <%= f.label :select_address_1, "登録済住所から選択" %>
      </div>
      <p class="ml-4"><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></p>
      <div>
        <%= f.radio_button :select_address, "2" %>
        <%= f.label :select_address_2, "新しいお届け先" %>
      </div>
      <table class="ml-4">
        <tbody>
          <tr>
            <th><label>郵便番号(ハイフンなし)</label></th>
            <td><%= f.text_field :postal_code, placeholder:"0000000" %></td>
          </tr>
          <tr>
            <th><label>住所</label></th>
            <th><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", size: "50" %></th>
          </tr>
          <tr>
            <th><label>宛名</label></th>
            <th><%= f.text_field :address_name, placeholder:"令和道子" %></th>
          </tr>
        </tbody>
      </table>
      <div class="text-center">
        <%= f.submit '確認画面へ進む', class:"btn btn-primary px-3" %>
      </div>
    </div>
    <% end %>
  </div>
</div>