<h1>注文情報確認</h1>
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <th><%= cart_item.item.name %></th>
          <td><%= cart_item.item.with_tax_price %> 円</td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.subtotal%> 円</td>
        </tr>
        <% end %>
      </tbody>
      <tbody>
        <tr>
          <th>送料</th>
          <th><%= @postage %>円</th>
        </tr>
        <tr>
          <th>商品合計</th>
          <th><%= @total_amount %>円</th>
        </tr>
        <tr>
          <th>請求金額</th>
          <th><%= @pay_money %>円</th>
        </tr>
      </tbody>
    </table>
    <div>
      支払方法 <%= @order.pay_method_i18n %>
    </div>
    <div>
      お届け先 <%= @order.address_display %>
    </div>
  <%= form_with model: @order, url: orders_path, method: :post do |f| %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= f.hidden_field :address, :value => @order.address %>
    <%= f.hidden_field :address_name, :value => @order.address_name %>
    <%= f.hidden_field :pay_method, :value => @order.pay_method %>
    <%= f.hidden_field :postage, :value => @postage.to_i %>
    <%= f.hidden_field :pay_money, :value => @pay_money.to_i %>
    <%= f.submit '確認画面へ進む', class:"btn btn-sm btn-success" %>
  <% end %>