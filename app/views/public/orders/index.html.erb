<div class="container">
  <h3 class="ml-4">注文履歴一覧</h3>
  <div class="row m-2">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%y/%m/%d') %></td>
          <td>〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.address_name %></th>
          <td><% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
              <% end %></td>
          <td><%= number_with_delimiter(order.pay_money, delimiter: ',') %>円</td>
          <td><%= link_to "表示する", order_path(order.id), class:"btn btn-primary" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
