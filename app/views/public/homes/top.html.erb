<% @recent_items.each do |item| %>
  <div class="item-box">
    <%= image_tag item.image, size: "100x100" %>
  </div>
  <div class="item-name">
    <%= link_to item.name, item_path(item.id) %>
  </div>
  <div class="item-price">
    ¥ <%= item.price %>
  </div>
<% end %>
