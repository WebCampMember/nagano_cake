<div class="container">
  <div class="row p-5">
    <div class="col-2">ジャンル検索</div>
    <div class="col-4">
      <%= image_tag @item.get_image(300,200) %>
    </div>
    <div class="col-6 p-2">
      <div class="row">
        <h4 class="font-weight-bold"><%= @item.name %></h4>
      </div>
      <div class="row">
        <p class="font-weight-normal"><%= @item.introduction %></p>
      </div>
      <div class="row">
        <p class="font-weight-bold">¥ <%= number_with_delimiter(@item.with_tax_price.floor, delimiter: ',') %>(税込)</p>
      </div>
      <!--ログインしている場合-->
      <% if current_customer %>
        <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
        <div class="row">
          <div class="col-3">
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.select :amount, *[1..10], placeholder:"個数選択" %>
          </div>
          <div class="col-6">
            <%= f.submit 'カートに入れる', class:"btn btn-success" %>
          </div>
        </div>
        <% end %>
      <% end %>
      <!---->
    </div>
  </div>
</div>