<div class="container">
  <div class="">
    <h3 class="font-weight-bold m-4">ログイン</h3>
    <%= form_with model: @customer, url: customer_session_path do |f| %>
    <h4>会員の方はこちらからログイン</h4>
      <div class="row">
        <div class="col-2 text-right"><%= f.label :email, "メールアドレス" %></div>
        <div class="col-3 text-left"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      </div>
      <div class="row">
        <div class="col-2 text-right"><%= f.label :password,"パスワード" %></div>
        <div class="col-3 text-left"><%= f.password_field :password, autocomplete: "current-password" %></div>
      </div>
        <% if devise_mapping.rememberable? %>
          <div class="col-mx-auto">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="col mx-auto">
          <%= f.submit "ログイン", class: "btn btn-success m-2" %>
        </div>
      <% end %>
    <%= render "public/shared/links" %>
    </div>
  </div>
</div>
