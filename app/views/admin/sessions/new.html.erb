<div class="container p-4">
  <h3 class="font-weight-bold ml-4">管理者ログイン</h3>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-4 text-right"><%= f.label :email, "メールアドレス" %></div>
    <div class="col-8 text-left">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com", size: 50 %>
    </div>
  </div>
  <div class="row">
    <div class="col-4 text-right"><%= f.label :password, "パスワード" %></div>
    <div class="col-8 text-left"><%= f.password_field :password, autocomplete: "current-password", size: 50 %></div>
  </div>

  <% if devise_mapping.rememberable? %>
  <div class="row">
    <div class="col-4 text-right"></div>
    <div class="col-8 text-left">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  </div>
  <% end %>

  <div class="row">
    <div class="col-4 text-right"></div>
    <div class="col-8 text-left">
      <%= f.submit "ログイン", class: "btn btn-primary my-3 px-5" %>
    </div>
  </div>
  <% end %>

<%= render "admin/shared/links" %>
</div>
