<h1>注文履歴一覧</h1>
<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <th><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></th>
      <th><%= order.address_name %></td>
      <% total = 0 %>
      <% order.order_details.each do |order_detail| %>
        <% total += order_detail.amount %>
      <% end %>
      <td><%= total %></td>
      <th></th>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @orders %>