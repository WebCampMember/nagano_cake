<h1><%= "#{@customer.last_name}#{@customer.first_name}" %>さんの会員情報編集</h1>
<%= form_with model: @customer, url: admin_customer_path(@customer) do |f| %>
  <table>
    <tbody>
      <tr>
        <th>会員ID</th>
        <th><%= @customer.id %></th>
      </tr>
      <tr>
          <th><label for="inputName">氏名</label></th>
          <th><%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"姓" %></th>
          <th><%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"名" %></th>
        </tr>
        <tr>
          <th><label for="inputNameKana">フリガナ</label></th>
          <th><%= f.text_field :last_name_kana, autofocus: true, id:"inputNameKana", placeholder:"セイ" %></th>
          <th><%= f.text_field :first_name_kana, autofocus: true, id:"inputNameKana", placeholder:"メイ" %></th>
        </tr>
        <tr>
          <th><label for="inputPostalCode">郵便番号</label></th>
          <th><%= f.text_field :postal_code, autofocus: true, id:"PostalCode", placeholder:"0000000" %></th>
        </tr>
        <tr>
          <th><label for="inputAddress">住所</label></th>
          <th><%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"〇〇県〇〇市" %></th>
        </tr>
        <tr>
          <th><label for="inputTelephoneNumber">電話番号</label></th>
          <th><%= f.text_field :telephone_number, autofocus: true, id:"inputTelephoneNumber", placeholder:"00000000000" %></th>
        </tr>
        <tr>
          <th><label for="inputEmail">メールアドレス</label></th>
          <th><%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"sample@example.com" %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th><%= f.select :is_deleted, options_for_select([["有効", false], ["退会", true]],  @customer.is_deleted) %></th>
        </tr>
    </tbody>
  </table>
  <div>
    <%= f.submit "変更を保存", class:"btn btn-secondary" %>
  </div>
  <% end %>
