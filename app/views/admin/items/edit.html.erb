<div class="container p-4">
  <h3 class="font-weight-bold ml-5">商品編集</h3>
  <%= form_with model: @item, url: admin_item_path(@item) do |f| %>
  <div class="d-flex justify-content-center m-4">
    <div class="row">
      <table>
        <tbody>
          <tr>
            <th>商品画像</th>
            <td><%= f.file_field :image, accept: "image/*"  %></td>
          </tr>
          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name, size: 35 %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= f.text_area :introduction, size: "38x5" %></td>
            </tr>
          <tr>
            <th>ジャンル名</th>
            <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :genre_name) %></td>
          </tr>
          <tr>
            <th>税抜価格</th>
            <td><%= f.text_field :price, size: 35 %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="d-flex justify-content-center m-1">
    <%= f.submit "変更を保存", class:"btn btn-success m-2 px-4 py-2" %>
  </div>
  <% end %>
</div>