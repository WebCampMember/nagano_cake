<div class="container p-4">
  <div class="row m-3">
    <div class="col text-left ml-5">
      <h3 class="font-weight-bold ml-5">商品一覧</h3>
    </div>
    <div class="col text-right">
      <%= link_to new_admin_item_path, class:"nav-link text-light" do %>
        <i class="fas fa-plus-circle fa-lg text-dark shadow"></i>
      <% end %>
    </div>
  </div>
  <div class="row m-4">
    <table class="table">
      <thead>
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= number_with_delimiter(item.price, delimiter: ',') %></td>
          <td><%= item.genre.genre_name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center">
    <%= paginate @items %>
  </div>
</div>